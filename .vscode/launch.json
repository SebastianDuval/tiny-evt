{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RunViteDevServer",
      "type": "node",
      "presentation": {
        // "hidden": true
      },
      "request": "launch",
      "cwd": "${workspaceFolder}/renderer",
      "env": {
        "NODE_ENV": "development"
      },
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "--config ${workspaceFolder}/configs/vite.config.dev.ts"
      ],
      // "serverReadyAction": {
      //   "pattern": "Dev server running",
      //   "uriFormat": "http://localhost:3000",
      //   "action": "openExternally"
      // }
    },
    {
      "name": "RunElectron",
      "type": "node",
      "presentation": {
        // "hidden": true
      },
      "request": "launch",
      "env": {
        "NODE_ENV": "development"
      },
      "port": 5858,
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "args" : [
        "--inspect=5858",
        "${workspaceFolder}/build/main.js"
      ],
      "preLaunchTask": "RunEsbuild"
    }
  ],
  "compounds": [
    {
      "name": "RunApp",
      "configurations": ["RunViteDevServer", "RunElectron"]
    }
  ]
}